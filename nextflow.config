k8s {
   namespace = 'medgen-ns'
   runAsUser = 1000
   storageClaimName = 'home-patricie-0'
   storageMountPath = '/home/user'
   homeDir = '/home/user/Delly_somatic'
   launchDir = '/home/user/Delly_somatic/launch'
   projectDir = '/home/user/Delly_somatic/project'
   workDir = '/home/user/Delly_somatic/temp'
   pod = [ [volumeClaim: 'pvc-medgen-plevova', mountPath: "/storage" ]]
}

params{
   input = "/storage/delly_hg38_allSamples_BAM/*"
}

process {
   shell = ['/bin/bash', '-euo', 'pipefail']
   scratch = true
   executor = 'k8s'
   cpus = 1
   memory = '1GB'
 pod = [[securityContext:[fsGroupChangePolicy:'OnRootMismatch', runAsUser:1000, runAsGroup:1, fsGroup:1]], [nodeSelector:'storage=local-ssd']]
}

